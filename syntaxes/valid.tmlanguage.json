{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Valid",
  "scopeName": "source.valid",
  "patterns": [
    {
      "name": "comment.line.double-minus.valid",
      "match": "--.*$"
    },
    {
      "name": "meta.function.valid",
      "begin": "\\b[Pp][Rr][Oo][Cc][Ee][Dd][Uu][Rr][Ee]\\b\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "beginCaptures": {
        "0": { "name": "keyword.control.valid" },
        "1": { "name": "entity.name.function.valid" }
      },
      "end": "\\)",
      "patterns": [
        {
          "name": "punctuation.parenthesis.valid",
          "match": "[()]"
        }
      ]
    },
    
    {
      "name": "string.quoted.double.valid",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.valid",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "constant.numeric.valid",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "name": "keyword.control.valid",
      "match": "\\b([Ee][Nn][Dd][Pp][Rr][Oo][Cc][Ee][Dd][Uu][Rr][Ee]|[Ii][Ff]|[Ee][Ll][Ss][Ee] [Ii][Ff]|[Ee][Ll][Ss][Ee]|[Ee][Nn][Dd][Ii][Ff]|[Tt][Hh][Ee][Nn]|[Ff][Oo][Rr]|[Ww][Hh][Ii][Ll][Ee]|return|break|switch|case)\\b"
    },
    {
      "name": "storage.type.valid",
      "match": "\\b([Ii][Nn][Tt]|[Ff][Ll][Oo][Aa][Tt]|[Ss][Tt][Rr][Ii][Nn][Gg]|[Tt][Ee][Xx][Tt]|[Bb][Oo][Oo][Ll]|[Vv][Oo][Ii][Dd])\\b"
    },
    {
      "name": "entity.name.function.valid",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
    },
    {
      "name": "variable.other.valid",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  ],
  "repository": {},
  "scope": "source.valid",
  "fileTypes": ["valid"]
}