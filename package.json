{
  "name": "valid-syntax",
  "displayName": "VALID Syntax Highlighting for VS Code",
  "description": "Syntax highlighting for the Valid programming language.",
  "version": "0.0.3",
  "publisher": "TXT-E-Tech",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository":{
    "type": "git",
    "url": "https://github.com/FabioSpr/valid-syntax.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:valid"
  ],
  "contributes": {
    "languages": [
      {
        "id": "valid",
        "aliases": [
          "Valid",
          "valid"
        ],
        "extensions": [
          ".tst",
          ".vld"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "valid",
        "scopeName": "source.valid",
        "path": "./syntaxes/valid.tmlanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.9.3",
    "@types/vscode": "^1.70.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "publish": "vsce package && vsce publish"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0",
  "type": "commonjs"
}
